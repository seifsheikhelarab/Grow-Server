// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ---------------- ENUMS ----------------
enum Role {
  CUSTOMER
  WORKER
  OWNER
  ADMIN
}

enum AdminRole {
  SUPER_ADMIN // Owner in doc
  EDITOR // Admin in doc
  VIEWER // Viewer in doc
}

enum TxType {
  DEPOSIT // Worker sends points to Customer
  WITHDRAWAL // Customer/Worker cashes out
  COMMISSION // System adds points to Worker
}

enum TxStatus {
  PENDING
  COMPLETED
  FAILED
  REJECTED
}

// ---------------- CORE MODELS ----------------

model User {
  id            String     @id @default(uuid())
  full_name     String
  phone         String     @unique // +201xxxxxxxxx
  password_hash String? // Nullable for users invited but not fully signed up
  role          Role
  admin_role    AdminRole? // Only if role is ADMIN
  is_active     Boolean    @default(true) //for deletion/suspension
  is_verified   Boolean    @default(false) //for verification
  updated_at    DateTime   @updatedAt
  created_at    DateTime   @default(now())

  // Relations
  wallet          Wallet?
  owned_kiosks    Kiosk[]             @relation("OwnerRelation")
  worker_profiles WorkerProfile[]
  goals           Goal[]
  redemptions     RedemptionRequest[]
  audit_logs      AuditLog[]

  sent_transactions Transaction[]  @relation(name: "SenderRelation")
  notifications     Notification[]
}

// ---------------- FINANCIAL MODELS ----------------

model Wallet {
  id      String  @id @default(uuid())
  user_id String  @unique
  balance Decimal @default(0.00) @db.Decimal(15, 2)

  user User @relation(fields: [user_id], references: [id])
}

// For customers who receive points but haven't downloaded the app yet
model ShadowWallet {
  phone        String   @id // Primary key is phone number
  balance      Decimal  @default(0.00) @db.Decimal(15, 2)
  last_updated DateTime @updatedAt
}

model Transaction {
  id               String  @id @default(uuid())
  sender_id        String // Worker/Owner ID
  receiver_phone   String // Stored for history
  receiver_id      String? // Null if sent to Shadow Wallet
  kiosk_id         String
  workerprofile_id String?

  amount_gross Decimal @db.Decimal(10, 2) // e.g., 100.00 (Input)
  amount_net   Decimal @db.Decimal(10, 2) // e.g., 95.00 (User gets)
  commission   Decimal @db.Decimal(10, 2) // e.g., 5.00 (Worker gets)

  type              TxType
  status            TxStatus         @default(COMPLETED)
  commission_status CommissionStatus @default(PAID) // PAID, PENDING, FORFEITED
  created_at        DateTime         @default(now())
  updated_at        DateTime         @updatedAt

  kiosk         Kiosk          @relation(fields: [kiosk_id], references: [id])
  sender        User           @relation(fields: [sender_id], references: [id], name: "SenderRelation")
  workerprofile WorkerProfile? @relation(fields: [workerprofile_id], references: [id])
}

enum CommissionStatus {
  PAID
  PENDING
  FORFEITED
}

model RedemptionRequest {
  id         String   @id @default(uuid())
  user_id    String
  amount     Decimal  @db.Decimal(10, 2)
  method     String // "Vodafone Cash", "Instapay"
  details    String // Phone number or address
  type       String   @default("E-Wallet") // E-Wallet or Bank Transfer 
  status     TxStatus @default(PENDING)
  admin_note String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id])
}

model KioskDue {
  id           String   @id @default(uuid())
  kiosk_id     String
  amount       Decimal  @db.Decimal(10, 2) // Amount owner owes Grow
  is_paid      Boolean  @default(false)
  collected_by String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  kiosk Kiosk @relation(fields: [kiosk_id], references: [id])
}

// ---------------- KIOSK LOGIC ----------------

model Kiosk {
  id         String   @id @default(uuid())
  owner_id   String
  name       String
  kiosk_type String
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  owner        User            @relation("OwnerRelation", fields: [owner_id], references: [id])
  workers      WorkerProfile[]
  transactions Transaction[]
  dues         KioskDue[]

  goals Goal[]
}

model WorkerProfile {
  id         String   @id @default(uuid())
  user_id    String
  kiosk_id   String
  name       String   @default("Worker")
  status     String // PENDING_INVITE, ACTIVE, REJECTED
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user  User  @relation(fields: [user_id], references: [id])
  kiosk Kiosk @relation(fields: [kiosk_id], references: [id])

  transactions Transaction[]
}

// ---------------- GOALS ----------------

model Goal {
  id            String    @id @default(uuid())
  user_id       String?
  title         String
  target_amount Decimal   @db.Decimal(10, 2)
  type          String // SAVING, WORKER_TARGET
  status        String    @default("ACTIVE") // ACTIVE, ARCHIVED
  deadline      DateTime?
  kiosk_id      String?

  owner_id     String?
  is_recurring Boolean @default(false)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user  User?  @relation(fields: [user_id], references: [id])
  kiosk Kiosk? @relation(fields: [kiosk_id], references: [id])
}

model Otp {
  phone     String   @id
  code      String
  expiresAt DateTime
}

// ---------------- ADMIN & SYSTEM ----------------

model SystemSetting {
  key         String   @id
  value       String // JSON string or string value
  description String?
  updated_at  DateTime @updatedAt
}

model AuditLog {
  id         String   @id @default(uuid())
  admin_id   String
  action     String
  target_id  String?
  details    String? // JSON
  ip_address String?
  created_at DateTime @default(now())

  admin User @relation(fields: [admin_id], references: [id])
}

// ---------------- NOTIFICATIONS ----------------

enum NotificationType {
  WORKER_INVITATION_SENT
  WORKER_INVITATION_RESPONSE
  REDEMPTION_REQUEST_NEW
  REDEMPTION_REQUEST_PROCESSED
  WORKER_REDEMPTION_CREATED
  DUE_PENDING
  DUE_PAID
  WORKER_LEFT_KIOSK
  USER_STATUS_CHANGED
  KIOSK_STATUS_CHANGED
  TRANSACTION_COMPLETED
  KIOSK_CREATED
  KIOSK_DELETED
}

model Notification {
  id         String           @id @default(uuid())
  user_id    String
  title      String
  message    String
  type       NotificationType
  read       Boolean          @default(false)
  created_at DateTime         @default(now())

  user User @relation(fields: [user_id], references: [id])
}
