{
    "name": "grow-server",
    "version": "1.0.0",
    "description": "Grow Server API",
    "homepage": "https://github.com/seifsheikhelarab/Grow-Server#readme",
    "bugs": {
        "url": "https://github.com/seifsheikhelarab/Grow-Server/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/seifsheikhelarab/Grow-Server.git"
    },
    "license": "ISC",
    "author": "",
    "type": "module",
    "main": "src/app.ts",
    "scripts": {
        "dev": "nodemon --watch src --ext ts --exec tsx src/app.ts",
        "dev:start": "tsx src/app.ts",
        "dev:watch": "tsx watch src/index.ts",
        "dev:build": "tsc",
        "dev:db": "prisma migrate dev --name init --skip-seed",
        "dev:lint": "eslint src --ext .ts",
        "dev:format": "prettier --write src/**/*.{js,ts}",
        "dev:doc": "typedoc --options ./typedoc.config.ts",
        "prod:start": "node dist/app.js",
        "prod:watch": "nodemon dist/app.js",
        "seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^5.21.1",
        "@types/ms": "^2.1.0",
        "axios": "^1.13.2",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "express-rate-limit": "^7.1.5",
        "jsonwebtoken": "^9.0.2",
        "ms": "^2.1.3",
        "node-cron": "^4.2.1",
        "pino": "^8.21.0",
        "pino-pretty": "^10.3.1",
        "swagger-ui-express": "^5.0.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@faker-js/faker": "^10.1.0",
        "@types/axios": "^0.9.36",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.19.27",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "jiti": "^2.6.1",
        "jsdoc": "^4.0.5",
        "nodemon": "^3.1.11",
        "prettier": "^3.7.3",
        "prisma": "^5.21.1",
        "tsx": "^4.21.0",
        "typedoc": "^0.28.15",
        "typedoc-material-theme": "^1.4.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    }
}
